<% if (producto) { %>
    <h1>ID: <%= producto.id %>
    </h1>
    <h4>
        <%= producto.nombre %>
    </h4>

    <div class="row">
        <div class="col">
            <p><%= producto.descripcion %>
            </p>
        </div>
    </div>
    <% } else { %>
        <p>No existe el producto</p>
        <% } %>